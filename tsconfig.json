{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "baseUrl": "./src",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "paths": {
    },
    "lib": [
      "dom",
      "es7"
    ],
    "types": [
      "source-map",
      "uglify-js",
      "webpack",
      "zone.js",
      "lodash",
      "node",
      "custom"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true,
    "transpileOnly": true
  }
}